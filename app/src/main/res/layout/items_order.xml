<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_data_user_order"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/txt_img_name_user_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_data_user_order"
            android:layout_marginStart="10dp"
            android:text="Image Name"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txt_img_price_user_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Price"
            android:layout_toRightOf="@+id/img_data_user_order"
            android:layout_below="@+id/txt_img_name_user_order"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>







    </RelativeLayout>

</androidx.cardview.widget.CardView>