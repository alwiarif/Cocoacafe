<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cocoa_all"
    android:id="@+id/layLogin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cocoa Cafe \n Login"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#965B5B"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <EditText
        android:id="@+id/edt_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:layout_below="@+id/edt_email"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edt_pass"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtGetAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#0A7CB3"
        android:text="Klik disini untuk\nmendapatkan akun"
        android:layout_below="@+id/btn_submit"
        android:layout_centerHorizontal="true"
        />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>