<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cocoa_all"
    android:id="@+id/animLayout"
    tools:context=".Home.SplashActivity">

    <TextView
        android:id="@+id/txtviewPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COCOA CafÃ©"
        android:fontFamily="@font/cafe_font"
        android:textColor="#BD6C28"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/imgvCoffe"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:background="@drawable/polosan_warna"
        android:layout_below="@+id/txtviewPanel"
        android:layout_centerHorizontal="true"

        />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-4dp"
        android:foregroundGravity="bottom"
        android:indeterminate="true"
        android:padding="0dp"
        android:theme="@style/ProgressBarStyle" />

</RelativeLayout>