<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay_homeUser"
    android:background="@drawable/bg_cocoa_all"
    >


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        />

    <LinearLayout
        android:id="@+id/dotsLayouts"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        />

    <LinearLayout
        android:id="@+id/linearCoffeUser"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/linearMenuUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:gravity="center"
            >



            <ImageView
                android:id="@+id/imgMenuUser"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/menus"
                android:layout_below="@+id/txtSelamat"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/imgcoffe"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:gravity="center"
                android:textColor="#000"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMenuHisUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:gravity="center"
            >



            <ImageView
                android:id="@+id/imgMenuHisUser"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_history_black_24dp"
                android:layout_below="@+id/txtSelamat"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/imgcoffe"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MyHistory"
                android:gravity="center"
                android:textColor="#000"
                />



        </LinearLayout>





    </LinearLayout>

    <ImageView
        android:id="@+id/imgExitsUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/exits"
        android:layout_alignParentRight="true"

        />


</RelativeLayout>